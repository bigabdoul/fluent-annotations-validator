{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../src/FluentAnnotationsValidator",
          "files": [
            "**/*.csproj"
          ]
        },
        {
          "src": "../src/FluentAnnotationsValidator.Annotations",
          "files": [
            "**/*.csproj"
          ]
        },
        {
          "src": "../src/FluentAnnotationsValidator.Core",
          "files": [
            "**/*.csproj"
          ]
        },
        {
          "src": "../src/FluentAnnotationsValidator.Runtime",
          "files": [
            "**/*.csproj"
          ]
        },
        {
          "src": "../src/FluentAnnotationsValidator.AspNetCore",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md",
          "api/toc.yml"
        ],
        "src": "."
      },
      {
        "files": [
          "**/*.md",
          "toc.yml"
        ],
        "exclude": [
          "_site/**",
          "**/obj/**"
        ]
      },
      {
        "files": [
          "docs/**.md",
          "docs/toc.yml"
        ],
        "src": "."
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ],
        "src": "."
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "",
      "_appTitle": "",
      "_enableSearch": true,
      "pdf": true,
      "_gitUrl": "https://github.com/bigabdoul/fluent-annotations-validator.git"
    }
  }
}